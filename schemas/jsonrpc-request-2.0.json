{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A JSON-RPC 2.0 request",
    "oneOf": [
        {
            "description": "A request object",
            "$ref": "#/definitions/request"
        },
        {
            "description": "A batch request array",
            "type": "array",
            "items": {
                "$ref": "#/definitions/request"
            }
        }
    ],
    "definitions": {
        "request": {
            "type": "object",
            "required": [
                "jsonrpc",
                "method"
            ],
            "properties": {
                "jsonrpc": {
                    "const": "2.0"
                },
                "method": {
                    "type": "string"
                },
                "params": {
                    "type": [
                        "array",
                        "object"
                    ]
                },
                "id": {
                    "type": [
                        "string",
                        "number",
                        "null"
                    ]
                }
            },
            "additionalProperties": false
        }
    }
}