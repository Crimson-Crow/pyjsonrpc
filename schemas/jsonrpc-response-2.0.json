{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A JSON-RPC 2.0 response",
    "oneOf": [
        {
            "description": "A response object",
            "$ref": "#/definitions/response"
        },
        {
            "description": "A batch response array",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/response"
            }
        }
    ],
    "definitions": {
        "response": {
            "type": "object",
            "required": [
                "jsonrpc",
                "id"
            ],
            "oneOf": [
                {
                    "required": [
                        "result"
                    ]
                },
                {
                    "required": [
                        "error"
                    ]
                }
            ],
            "properties": {
                "jsonrpc": {
                    "const": "2.0"
                },
                "result": {},
                "error": {
                    "type": "object",
                    "required": [
                        "code",
                        "message"
                    ],
                    "properties": {
                        "code": {
                            "type": "integer"
                        },
                        "message": {
                            "type": "string"
                        },
                        "data": {}
                    },
                    "additionalProperties": false
                },
                "id": {
                    "type": [
                        "string",
                        "number",
                        "null"
                    ]
                }
            },
            "additionalProperties": false
        }
    }
}